{
  "version": 2,
  "functions": {
    "api/server.js": {
      "runtime": "nodejs18.x",
      "includeFiles": [
        "routes/**",
        "controllers/**",
        "Controllers/**",
        "models/**",
        "middleware/**",
        "public/**"
      ]
    }
  },
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/server.js" },
    { "src": "^/uploads/(.*)$", "dest": "/api/server.js" },
    { "src": "^(?!/api).*", "dest": "/api/server.js" }
  ]
}
